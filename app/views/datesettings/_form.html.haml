= form_for(@datesetting) do |f|
  - if @datesetting.errors.any? 
    #error_explanation  
      %h2= pluralize(@datesetting.errors.count, "error") 
      "prohibited this datesetting from being saved:"
    %ul - @datesetting.errors.full_messages.each do |msg| 
    %li= msg

  #field
    = f.label :Startdate
    %br
    = f.date_field :startdate
    %br
    %br
    = f.label :Enddate
    %br
    = f.date_field :enddate
    %br
    %br
    
  #actions
    = f.submit
