%h1= t('Listing transactions')

%table
  %tbody
    %tr
      %th Date
      %th Section
      %th Code
      %th Amounttotal
      %th Gsttype
      %th Gstamount
      %th Netamount
      %th Co
      %th 
      %th
      %th
    - @transactions.each do |transaction| 
      %tr
        %td= transaction.date
        %td= transaction.chart_clones_id
        %td= link_to transaction.code, charts_path
        %td= transaction.amounttotal
        %td= transaction.gsttype
        %td= transaction.gstamount
        %td= transaction.netamount
        %td= transaction.co

        %td
          %b= link_to 'Show', transaction
        %td
          %b= link_to 'Edit', edit_transaction_path(transaction)
        %td
          %b= link_to 'Destroy', transaction, method: :delete, class: :destroy, data: { confirm: 'Are you sure?' } 
%br 
- if current_user.category > 0       
  %b= link_to 'New Transaction', new_transaction_path
 
