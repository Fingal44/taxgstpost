= form_for(@initsetting) do |f|
  - if @initsetting.errors.any? 
    #error_explanation  
      %h2= pluralize(@initsetting.errors.count, "error") 
      "prohibited this rus_message from being saved:"
    %ul - @initsetting.errors.full_messages.each do |msg| 
    %li= msg

  #field
    = f.label :Number
    %br
    = f.number_field :periodint
    
    = f.label :Content
    %br
    = f.text_field :periodtext
    
  #actions
    = f.submit
