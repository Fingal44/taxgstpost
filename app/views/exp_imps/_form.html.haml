= form_for @user do |f| 
  - if @user.errors.any?
    #error_explanation
      %h2= pluralize(@user.errors.count, "error") 
      "prohibited this user from being saved:"
    %ul - @user.errors.full_messages.each do |msg|
    %li>= msg

  #field
    = f.label :Name 
    = f.text_field :name
  
  #field
    = f.label :Email
    %br 
    = f.text_field :email

  #field
    = f.label :Category
    %br
    = f.number_field :category

  #field
    = f.label :Expire_date
    %br
    = f.text_field :expire_date

  #actions
    = f.submit

