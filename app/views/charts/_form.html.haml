= form_for(@chart) do |f| 
  - if @chart.errors.any?
    #error_explanation
      %h2= pluralize(@chart.errors.count, "error") 
      "prohibited this chart from being saved:"
    %ul - @chart.errors.full_messages.each do |msg|
    %li>= msg

  #field
    = f.label :Glcode 
    = f.number_field :glcode
  
  #field
    = f.label :Code
    %br 
    = f.number_field :code

  #field
    = f.label :Cst
    %br
    = f.number_field :gst

  #field
    = f.label :Content
    %br
    = f.text_field :content

  #field
    = f.label :Header
    %br
    = f.number_field :header

  #actions
    = f.submit

